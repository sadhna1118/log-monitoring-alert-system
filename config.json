{
  "email": {
    "smtp_server": "smtp.gmail.com",
    "smtp_port": 587,
    "sender_email": "your-email@gmail.com",
    "sender_password": "your-app-password",
    "recipient_email": "security-team@company.com"
  },
  "monitoring": {
    "log_file_path": "logs/system.log",

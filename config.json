  },
  "dashboard": {
    "host": "0.0.0.0",
    "port": 5000,
    "debug": false
  },
  "machine_learning": {
    "enable_ml_detection": true,
    "model_path": "models/anomaly_detector.pkl",
    "contamination": 0.1,
    "min_samples": 10
  },
  "slack": {
    "webhook_url": "",
    "enable_slack_alerts": false
  }
